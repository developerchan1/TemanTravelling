<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30dp"
    android:orientation="vertical"
    android:background="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/TextDescriptionStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total harga" />

            <TextView
                android:id="@+id/tv_price"
                style="@style/TextSubtitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/color_primary"
                android:textSize="24sp"
                android:text="Rp -" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/TextDescriptionStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metode Pembayaran" />

            <TextView
                android:id="@+id/tv_payment_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/black"
                style="@style/TextSubtitleStyle"/>
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <TextView
        style="@style/TextDescriptionStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kota Destinasi" />

    <TextView
        android:id="@+id/tv_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="@color/black"
        style="@style/TextSubtitleStyle"/>

    <TextView
        android:id="@+id/tv_redirect_google_maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lihat Destinasi Yang Tersedia"
        android:textColor="@color/color_primary"
        android:textSize="10sp"
        style="@style/TextDescriptionStyle"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <TextView
        style="@style/TextDescriptionStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waktu Tersisa" />

    <TextView
        android:id="@+id/tv_left_time"
        style="@style/TextSubtitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:text="- : - : - : -" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <TextView
        style="@style/TextDescriptionStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kontak" />

    <ImageView
        android:id="@+id/iv_whatsapp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/whatsapp_image"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Batalkan Tour Guide"
            android:textColor="@android:color/holo_red_dark"
            android:textAllCaps="false"
            app:cornerRadius="20dp"
            app:strokeWidth="1dp"
            app:strokeColor="@android:color/holo_red_dark"
            app:backgroundTint="@color/white"
            style="@style/ButtonPrimaryStyle"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_complete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Selesai"
            android:textAllCaps="false"
            app:cornerRadius="20dp"
            style="@style/ButtonPrimaryStyle"/>

    </LinearLayout>


</LinearLayout>
