<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fantasticiii.temantravelling">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TemanTravelling">
        <activity android:name=".Activities.EditProfileActivity"></activity>
        <activity
            android:name=".Activities.TourGuideActivity"
            android:theme="@style/Theme.TemanTravelling.TransparentTheme" />
        <activity
            android:name=".Activities.UserActivity"
            android:theme="@style/Theme.TemanTravelling.TransparentTheme" />
        <activity android:name=".Activities.HistoryActivity" />
        <activity android:name=".Activities.OrderTourGuideActivity" />
        <activity android:name=".Activities.MainActivity" android:theme="@style/Theme.TemanTravelling.TransparentTheme"/>
        <activity android:name=".Activities.SignUpActivity" />
        <activity android:name=".Activities.SignInActivity" />
        <activity
            android:name=".SplashScreen.SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.WelcomeActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

</manifest>